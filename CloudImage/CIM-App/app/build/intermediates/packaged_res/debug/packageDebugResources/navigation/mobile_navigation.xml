<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_login">


    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.cloudimage.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_self"
            app:destination="@id/nav_gallery" />
    </fragment>

    <fragment
        android:id="@+id/nav_create"
        android:name="com.example.cloudimage.ui.create.CreateFragment"
        android:label="@string/menu_create"
        tools:layout="@layout/fragment_create" />

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.cloudimage.ui.login.LoginFragment"
        android:label="@string/menu_login"
        tools:layout="@layout/fragment_login" />

    <action
        android:id="@+id/action_login_to_create"
        app:destination="@id/nav_create"
        app:popUpTo="@id/nav_login"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_create_to_login"
        app:destination="@id/nav_login"
        app:popUpTo="@id/nav_create"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_login_to_gallery"
        app:destination="@id/nav_gallery"
        app:popUpTo="@id/nav_login"
        app:popUpToInclusive="true" />


</navigation>